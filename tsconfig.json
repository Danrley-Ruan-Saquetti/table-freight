{
  "compilerOptions": {
    "lib": ["ES6", "DOM"],
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "target": "ES6",
    "module": "ES6",
    "rootDir": "./src",
    "declaration": true,
    "removeComments": true,
    "sourceMap": false,
    "outDir": "./dist"
  },
  "exclude": ["./dist", "./assets"]
}
